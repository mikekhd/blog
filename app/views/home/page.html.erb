<h1>Welcome to Your blog</h1>
<%if !current_user.present? %>
  <%= link_to 'Login', login_url %>
Not registered yet! <%= link_to "Register now!", new_user_path %>
<% else %>
  <%= current_user.email %>
  <%= link_to "logout", controller: "sessions", action: "destroy" %>
<% end %>
<% Atom.all.each do |atom| %>
  <% if atom.approved %>
   <p><%= atom.title %></p>
   <p><%= truncate( atom.story, length:250)  %></p>
 <% end %>
<% end %>